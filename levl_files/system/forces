#include "../0/include/initialConditions"

forces
{
    type        forces;

    libs ( "libforces.so" );

    writeControl    timeStep;
    timeStep    100;

    log         yes;

    patches     (seed);
    pRef        0;
    rho         rhoInf;      // Indicates incompressible
    rhoInf      1.225;           // Redundant for incompressible
    liftDir     (1 0 0);
    dragDir     (0 0 1);
    CofR        (0.35 0 -0.25);  // Axle midpoint on ground
    pitchAxis   (0 0 1);
    magUInf     2.5;
    //lRef        1.166;        // Wheelbase length
    //Aref        0.679;        // Estimated 
    tolerance   1e-3;
}


