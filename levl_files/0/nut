FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 2.96e-6;

boundaryField
{

    inlet
    {
        type            freestream;
        freestreamValue	$internalField;
    }

    outlet
    {
        type            freestream;
        freestreamValue	$internalField;
    }

    outer
    {
        type            freestream;
        freestreamValue $internalField;
    }

    seed
    {
        type            nutUSpaldingWallFunction;
        value           uniform 0;
    }
}


